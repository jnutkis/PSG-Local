<%= search_form_for @q do |f| %>
  <%= f.search_field :full_ref_or_specification_cont %>
  <%= f.submit "Search", :class => 'savebtn' %>
<% end %>

<% if !@r.any? %>
	<div id="null-results"><%= "No results found" %></div>
<% end %>

<% if @r.any? %>
<table id = "reference-table-results">
	<tr>
		<th>Control Reference</th>
	</tr>
	<% @r.each do |ref|%>
	<tr>
		<td><%= link_to ref.full_ref, reference_path(ref) %></td>
	</tr>
	<% end %>
</table>
<%= paginate @r %>
<% else %>
	<table id = "reference-table">
		<tr>
			<th>Control Reference</th>
		</tr>
		<% @references.each do |ref|%>
		<tr>
			<td><%= link_to ref.full_ref, reference_path(ref) %></td>
		</tr>
		<% end %>
	</table>
	<%= paginate @references %>
<% end %>	


