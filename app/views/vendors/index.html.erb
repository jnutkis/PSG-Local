<h1 class="center">Vendors</h1>

<%= render 'vendors/search' %>

<% if !@r.any? %>
<table id = "vendor-table">
	<tr>
		<th>Vendor</th>
	</tr>
	<% @vendors.each do |vendor|%>
	<tr>
		<td><%= link_to vendor.name, vendor_path(vendor) %></td>
	</tr>
	<% end %>
</table>
<%= paginate @vendors %>
<% end %>


