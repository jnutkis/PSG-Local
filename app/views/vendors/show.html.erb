<p class="return"><%= link_to "<<< Return to Vendors",vendors_path %></p>
<div class="container">
	<div class="row center">
		<div class="col-xs-12 vendor-head">
		<h1>
		<% if @vendor.logo.present? %>
		<%= image_tag(@vendor.logo, class: "vendor-logo") %>
		<% end %>
		<%= @vendor.name %>
		</h1>
	</div>
	<div class="col-xs-12">
		<p>Website: <%= link_to @vendor.website,@vendor.website, :target => "_blank" %></p>
		<% if @vendor.phone.present? %>
		<p>Phone: <%= @vendor.phone %></p>
		<% end %>
		<% if @vendor.email.present? %>
		<p>Email: <%= mail_to @vendor.email, @vendor.email, subject: "Products and Services Guide Inquiry" %></p>
		<% end %>
	</div>
	</div>
	<div class="row">
		<div class="product-head">
			<h1>Products</h1>
		</div>
	</div>
	<div class="row">
		<% @products.each do |x| %>
		<div class="col-md-6">
			<h1 class="center"><%= x.name %></h1>
			<% if x.description.present? %>
			<div><%= x.description %></div>
			<% end %>
			<% if x.url.present? %>
			<%= link_to "More Information",x.url, :target => "_blank" %>
			<% end %>
		</div>
		<% end %>
	</div>
</div>
<%= paginate @products %>
