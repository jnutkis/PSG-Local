<p class="return"><%= link_to "<<< Return to Vendors",vendors_path %></p>
<div class="row center">
	<div class="col-xs-12 vendor-head">
	<% if @vendor.image.file? %>
	<%= image_tag(@vendor.image.url, class: "vendor-logo") %>
	<% end %>
	<h1>
	<%= @vendor.name %>
	</h1>
</div>
<div class="col-xs-12">
	<% if @vendor.website.present? %>
	<p><span class="glyphicon glyphicon-globe"></span>  <%= link_to @vendor.website,@vendor.website, :target => "_blank" %></p>
	<% end %>
	<% if @vendor.phone.present? %>
	<p><span class="glyphicon glyphicon-phone-alt"></span>  <%= @vendor.phone %></p>
	<% end %>
	<% if @vendor.email.present? %>
	<p><span class="glyphicon glyphicon-envelope"></span>  <%= mail_to @vendor.email, @vendor.email, subject: "Products and Services Guide Inquiry" %></p>
	<% end %>
</div>
</div>
<div class="row">
	<div class="product-head">
		<h1 class="product-title">
			Products
			<small>(<%= @product_count.size %>)</small>
		</h1>
	</div>
</div>
<% @products.each_with_index do |x,index| %>
<% @count += 1 %>
<% if @count % 2 != 0 %>
	<div class="row vendor-product-row">
	<% end %>
	<div class="col-md-6 vendor-product-body" id= <%="vendor-product-#{@count}"%>>
		<span class="vendor-product-num">
			<% if params[:page].present? %>
			<%= (index+1) + ((params[:page].to_i-1) * 8) %>
			<% else %>
			<%= index+1 %>
			<% end %>
		</span>
		<h2 class="center"><%= x.name %></h2>
		<% if x.description.present? %>
			<div><%= x.description %></div>
		<% end %>
		<%= link_to "More Information",vendor_product_path(@vendor,x) %>
	</div>
	<% if @count % 2 == 0 || (x === @products.last && @count % 2 != 0)%>
	</div>
	<% end %>
<% end %>
<%= paginate @products %>
