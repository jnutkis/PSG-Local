<div class="jumbotron center" id="home-head" data-turbolinks-permanent>
		<%= image_tag "hitrust.png",class: 'brand center'%>
		<h1>Products and Services Guide</h1>
		<%= form_tag search_path, method: :get, id: "search" do %>
  			<%= text_field_tag :q, params[:q], placeholder: "search...",autocomplete: 'off' %>
		<% end %>
</section>
</div>


<div class="container-fluid center">
	<div class="row">
		<%= link_to references_path do%>
			<div class="col-md-5 search-tile" id="search-ref" data-turbolinks-permanent>
				<span class="glyphicon glyphicon-search"></span>
				Search Products by CSF Reference
			</div>
		<% end %>
		<div class="col-md-2"></div>
		<%= link_to vendors_path do%>
			<div class="col-md-5 search-tile" id="search-vendor" data-turbolinks-permanent>
				<span class="glyphicon glyphicon-search"></span>
				Search Products by Vendor
			</div>
		<% end %>
	</div>	
	</div>
<div class="container">
	<div class="row center">
		<% if !logged_in? %>
			<div class="login-small" > Vendor? Log-in here </div>
		<% end %>
	</div>
</div>
