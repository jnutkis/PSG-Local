<div class="outer-modal">
    <div class = "modal-box">
        <div class = "modal-close pull-right">Close</div>
        <h1>Log-in</h1>
        <%= bootstrap_form_for :session, url: login_path do |f| %>
    	<%= f.email_field :email %>
      	<%= f.password_field :password,label: "Password" %>
      	<%= f.submit "Log In", class: "btn btn-info" %>
        <% end %>
        <div id="forgot"><%= link_to "Forgot your Password?", new_password_reset_path %></div>
    </div>
</div>