-- Table: vendors
CREATE TABLE "vendors" ("id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, "name" varchar, "website" varchar, "logo" varchar, "email" varchar, "active" integer, "phone" varchar);
