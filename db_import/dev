-- Index: index_associations_on_product_id
CREATE INDEX "index_associations_on_product_id" ON "associations" ("product_id");

-- Index: index_associations_on_reference_id
CREATE INDEX "index_associations_on_reference_id" ON "associations" ("reference_id");

-- Index: index_products_on_vendor_id
CREATE INDEX "index_products_on_vendor_id" ON "products" ("vendor_id");

-- Index: index_users_on_vendor_id
CREATE INDEX "index_users_on_vendor_id" ON "users" ("vendor_id");

COMMIT TRANSACTION;
PRAGMA foreign_keys = on;
