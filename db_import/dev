-- Table: users
CREATE TABLE "users" ("id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, "firstname" varchar, "lastname" varchar, "vendor_id" integer, "admin" integer, "superuser" integer, "email" varchar, "password_digest" varchar, "active" integer DEFAULT 0 NOT NULL, "newpw" integer DEFAULT 1 NOT NULL, "remember_digest" varchar, "activation_digest" varchar, "activated_at" datetime, "otp_secret_key" varchar, "reset_digest" varchar, "reset_sent_at" datetime, "password_fails" integer DEFAULT 0, "locked_at" datetime);
